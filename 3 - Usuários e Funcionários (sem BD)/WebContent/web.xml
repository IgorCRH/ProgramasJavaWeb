<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet.java</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CadastroServlet</servlet-name>
        <servlet-class>CadastroServlet.java</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroServlet</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompraServlet</servlet-name>
        <servlet-class>CompraServlet.java</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompraServlet</servlet-name>
        <url-pattern>/compra</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TelaFuncionarioServlet</servlet-name>
        <servlet-class>TelaFuncionarioServlet.java</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TelaFuncionarioServlet</servlet-name>
        <url-pattern>/telafuncionario</url-pattern>
    </servlet-mapping>
</web-app>